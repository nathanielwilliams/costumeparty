<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>
  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
      <aside class="col-md-3" style="text-align:center">
        <section class="user_info">
          <% if @user.wrestler == nil %>
            <%= image_tag("default_avatar.png", alt: "No Wrestler selected", size: "200") %>
          <% else %>
            <%= image_tag(@user.wrestler.image, alt: @user.wrestler.name, size: "200") %>
          <% end %>
        <br />
        <div style="text-align:center">
          <% if @user.wrestler == nil %>
            NO WRESTLER SELECTED
            <%if @user == current_user%>
              <br/>
              <%= link_to "SELECT YOUR WRESTLER", wrestlers_path%>
            <%end%>
          <% else %>
            <%= @user.wrestler.name.upcase %>
            <%if @user == current_user%>
              <br/>
              <%= link_to "CHANGE YOUR WRESTLER", wrestlers_path%>
            <%end%>
          <% end %>
        </div>
      </section>
      </aside>
      <div class="col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
