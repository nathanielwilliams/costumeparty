<div class="row">
  <aside class="col-md-4" style="text-align:center">
    <section class="user_info">
    <%= image_tag("default_avatar.png", alt: "No Wrestler selected") %>
    <br />
    <div style="text-align:center">
      NO WRESTLER SELECTED
    </div>
  </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @user.name %></h3>
    <% if @user.microposts.any? %>
      <h3>Messages (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
