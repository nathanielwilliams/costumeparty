<% provide(:title, 'Create Wrestler') %>
<div class="bgbelt">
  <h1>RING READY AND BELT HUNGRY?</h1>
  <h2>{Add a Wrestler}</h2>
  <%= form_for(@wrestler) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">



        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :slogan %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :image %>
        <span class="picture">
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
          </span>

        <%= f.submit "ADD WRESTLER!", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $('#wrestler_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Maximum file size is 3MB. The Hulkster only has so much space!.');
    }
  });
</script>
